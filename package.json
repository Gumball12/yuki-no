{
  "name": "yuki-no",
  "description": "A GitHub Action that tracks changes between repositories. It creates GitHub issues based on commits from a head repository, making it ideal for documentation translation projects.",
  "repository": {
    "url": "https://github.com/Gumball12/yuki-no.git",
    "type": "git"
  },
  "packageManager": "yarn@1.22.22",
  "scripts": {
    "start": "tsx src/index.ts",
    "start:dev": "tsx --env-file=.env src/index.ts",
    "type-check": "tsc --noEmit",
    "lint": "yarn type-check && yarn lint:prettier",
    "lint:prettier": "prettier '**/*.{ts,tsx,md,mdx,yml,yaml,json}' --write && prettier '**/*.{ts,tsx,md,mdx,yml,yaml,json}' --check",
    "test": "yarn test:unit && yarn test:integration",
    "test:unit": "vitest --coverage --run",
    "test:integration": "vitest --config vitest.integration.config.ts --run"
  },
  "dependencies": {
    "@octokit/plugin-retry": "^7.2.0",
    "@octokit/plugin-throttling": "^9.6.0",
    "@octokit/rest": "^21.0.2",
    "colors": "^1.4.0",
    "picomatch": "^4.0.2",
    "queue": "^7.0.0",
    "semver": "^7.7.1",
    "shelljs": "^0.8.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^22.12.0",
    "@types/picomatch": "^3.0.2",
    "@types/semver": "^7.5.8",
    "@types/shelljs": "^0.8.15",
    "@vitest/coverage-v8": "2.1.8",
    "@vitest/ui": "^2.1.8",
    "dotenv": "^17.2.2",
    "nock": "^14.0.10",
    "prettier": "^3.4.2",
    "vitest": "^2.1.8"
  }
}
