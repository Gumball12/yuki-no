{
  "name": "@gumball12/yuki-no",
  "version": "1.4.1",
  "description": "A GitHub Action that tracks changes between repositories. It creates GitHub issues based on commits from a head repository, making it ideal for documentation translation projects.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Gumball12/yuki-no.git"
  },
  "author": {
    "name": "Gumball12",
    "email": "to@shj.rip",
    "url": "https://github.com/Gumball12"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Gumball12/yuki-no/issues"
  },
  "homepage": "https://github.com/Gumball12/yuki-no#readme",
  "type": "module",
  "main": "packages/core/dist/public.js",
  "types": "packages/core/dist/public.d.ts",
  "files": [
    "packages/core/dist"
  ],
  "packageManager": "pnpm@10.13.1",
  "scripts": {
    "start": "tsx packages/core/index.ts",
    "start:dev": "tsx --env-file=.env packages/core/index.ts",
    "build": "pnpm -r build",
    "type-check": "pnpm -r type-check",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "prepublishOnly": "pnpm build && cp README.npm.md README.md"
  },
  "dependencies": {
    "@actions/github": "^6.0.1",
    "@octokit/plugin-retry": "^7.2.0",
    "@octokit/plugin-throttling": "^9.6.0",
    "@octokit/rest": "^21.0.2",
    "colors": "^1.4.0",
    "picomatch": "^4.0.2",
    "queue": "^7.0.0",
    "semver": "^7.7.1",
    "shelljs": "^0.8.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^22.12.0",
    "@types/picomatch": "^3.0.2",
    "@types/semver": "^7.5.8",
    "@types/shelljs": "^0.8.15",
    "@vitest/coverage-v8": "2.1.8",
    "@vitest/ui": "^2.1.8",
    "prettier": "^3.4.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8"
  }
}
