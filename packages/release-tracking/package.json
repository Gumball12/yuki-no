{
  "name": "@gumball12/yuki-no-plugin-release-tracking",
  "version": "1.0.0",
  "description": "Release tracking plugin for yuki-no - Tracks release status for commits and manages issue labels/comments automatically",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.build.json",
    "type-check": "tsc --noEmit",
    "lint": "pnpm type-check && pnpm lint:prettier",
    "lint:prettier": "prettier --check --write --parser typescript \"**/*.ts\" --ignore-path ../../.gitignore",
    "test": "vitest --coverage --run"
  },
  "peerDependencies": {
    "@gumball12/yuki-no-core": "*"
  },
  "devDependencies": {
    "@gumball12/yuki-no-core": "workspace:*",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^22.12.0",
    "@vitest/coverage-v8": "2.1.8",
    "@vitest/ui": "^2.1.8",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8"
  }
}